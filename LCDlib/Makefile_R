R3627ADEPS=Regression-Seiko_627A.o $(LIBS627A)
R4627ADEPS=Regression-44100_627A.o $(LIBS627A)
#
# Define switches for PIC16F628
ASM628=--deps --processor 16F628
LNK628=--map --script Regression_628.lkr
